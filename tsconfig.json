{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "baseUrl": ".",
    "paths": {
      "#components/*": [
        "src/components/*"
      ],
      "#includes/*": [
        "src/includes/*"
      ],
      "#repositories/*": [
        "src/repositories/*"
      ],
      "#hooks": [
        "src/hooks/index.ts"
      ],
      "#utils/*": [
        "src/utils/*"
      ],
      "#styles/*": [
        "src/styles/*"
      ]
    }
  },
  "include": [
    "src"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
